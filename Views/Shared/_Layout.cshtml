<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quote Tracker</title>
    <link rel="icon" type="image/png" href="~/book.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header class="d-flex flex-column align-items-center">
        <div class="col-12 d-flex align-items-center justify-content-evenly">
            <img class="header-img" src="./book.png" alt="">
            <h1><a asp-controller="Home" asp-action="Index">Verses to Remember</a></h1>
            <img class="header-img" src="./book.png" alt="">
        </div>
        <nav>
            <a asp-controller="BookPage" asp-action="Index">Books</a>
            @* <a asp-controller="TopicPage" asp-action="Index">Topics</a> *@
        </nav>
    </header>

    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
